{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"lint": {
			"outputs": [],
			"cache": false
		},
		"format": {
			"outputs": [],
			"cache": false
		},
		"dev": {
			"cache": false
		},
		"sort": {
			"cache": false
		},
		"package": {
			"outputs": ["package"]
		},
		"generate-types": {
			"dependsOn": ["^package"],
			"outputs": ["package/types"]
		},
		"test": {
			"dependsOn": ["^format", "^lint"],
			"outputs": [],
			"cache": false
		},
		"coverage": {
			"dependsOn": ["^format", "^lint"],
			"outputs": ["coverage/**"],
			"cache": true
		}
	}
}
